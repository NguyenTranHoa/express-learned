extends ../layout/common 

block content
    h1 Create user

    form(action="/users/create", method="POST", enctype="multipart/form-data")      
        if errors
            each error in errors
                .alert.alert-danger= error
        .form-group
            label(for="name") Name
            input#name(type="text", name="name", value = values ? values.name : "")
        .form-group
            label(for="phone") Phone
            input#phone(type="text", name="phone", value = values ? values.phone : "")
        .form-group
            label(for="avatar") Avatar
            input#avatar(type="file", name="avatar")
        button.btn.btn-primary Create