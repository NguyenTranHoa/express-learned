extends ../layout/common 

block content
    h1 Create user

    form(action="/users/create", method="POST")
        if errors
            each error in errors
                .alert.alert-danger= error
        .form-group
            label(for="name") Name
            input#name(type="text" name="name" value = values.name || "")
        .form-group
            label(for="phone") Phone
            input#phone(type="text" name="phone" value = values.phone || "")
        button.btn.btn-primary Create